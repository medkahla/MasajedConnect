generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum Role {
  VISITOR // Simple user, maybe for favorites later
  SUPERVISOR // Manages a mosque
  ADMIN // Global admin
}

enum ServiceType {
  WOMEN_SECTION
  PARKING
  ARABIC_CLASSES
  ACCESSIBILITY
  FUNERAL_WASHING
  LIBRARY
}

enum NeedStatus {
  OPEN
  IN_PROGRESS
  FULFILLED
  CLOSED
}

// Models

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      Role     @default(VISITOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  managedMosque Mosque? // One supervisor manages one mosque (Relation 1-1 or 1-0)
}

model Mosque {
  id          String  @id @default(cuid())
  name        String
  description String? @db.Text
  address     String
  city        String
  country     String  @default("France")

  // Geolocation
  latitude  Float
  longitude Float

  // Meta
  capacity Int?
  verified Boolean       @default(false)
  images   String[] // URLs of images
  services ServiceType[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  supervisorId String? @unique
  supervisor   User?   @relation(fields: [supervisorId], references: [id])

  prayerTimes PrayerTime? // 1-1 relation, one set of rules per mosque
  events      Event[]
  needs       Need[]
}

model PrayerTime {
  id       String @id @default(cuid())
  mosqueId String @unique
  mosque   Mosque @relation(fields: [mosqueId], references: [id], onDelete: Cascade)

  // Configuration
  calculationMethod String? // e.g., "UOIF", "MWL", etc.

  // Manual adjustments (Iqamah offsets in minutes relative to Adhan)
  // Or fixed times if they override API completely
  fajrIqamahOffset    Int @default(15)
  dhuhrIqamahOffset   Int @default(15)
  asrIqamahOffset     Int @default(15)
  maghribIqamahOffset Int @default(10)
  ishaIqamahOffset    Int @default(15)

  // Jumu'ah is often a fixed time
  jummah1 String? // Stored as "HH:mm"
  jummah2 String?

  updatedAt DateTime @updatedAt
}

model Event {
  id       String @id @default(cuid())
  mosqueId String
  mosque   Mosque @relation(fields: [mosqueId], references: [id], onDelete: Cascade)

  title       String
  description String?   @db.Text
  startTime   DateTime
  endTime     DateTime?

  imageUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Need {
  id       String @id @default(cuid())
  mosqueId String
  mosque   Mosque @relation(fields: [mosqueId], references: [id], onDelete: Cascade)

  title       String
  description String?    @db.Text
  status      NeedStatus @default(OPEN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
